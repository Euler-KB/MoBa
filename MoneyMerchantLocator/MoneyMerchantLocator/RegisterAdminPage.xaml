<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMerchantLocator.RegisterAdminPage"
             Title="Register">

    <StackLayout Orientation="Vertical" Padding="10">

        <Entry Keyboard="Text"   Placeholder="Username" Text="{Binding Path=Username,Mode=TwoWay}"/>

        <Entry Keyboard="Text" Placeholder="First name" Text="{Binding Path=FirstName,Mode=TwoWay}"/>

        <Entry Keyboard="Text" Placeholder="Last name" Text="{Binding Path=LastName,Mode=TwoWay}"/>

        <Entry Keyboard="Text" IsPassword="True" Placeholder="Password" Text="{Binding Path=Password,Mode=TwoWay}"/>

        <Button Text="Register" BackgroundColor="{StaticResource PrimaryDarkColor}" TextColor="White" BorderRadius="4" Margin="0,10,0,0" Command="{Binding RegisterCommand}"/>

    </StackLayout>
    
    
</ContentPage>