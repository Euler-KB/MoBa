<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMerchantLocator.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="AccentColor">#FF4081</Color>
            <Color x:Key="PrimaryColor">#2196F3</Color>
            <Color x:Key="PrimaryDarkColor">#1976D2</Color> 
            <Color x:Key="TextColor">#000000F</Color>
            <Color x:Key="IconColor">#FFFFFFF</Color>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="BorderRadius" Value="4"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDarkColor}"/>
            </Style>

            <Style x:Key="DisabledButtonStyle" TargetType="Button">
                <Setter Property="BorderRadius" Value="4"/>
                <Setter Property="TextColor" Value="#969696"/>
                <Setter Property="BackgroundColor" Value="#616D6D6D"/>
            </Style>
            
        </ResourceDictionary>

	</Application.Resources>
    
</Application>